<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="5dip" android:color="#475068e1" />
            <gradient android:angle="-90" android:startColor="#794f74ec" android:endColor="#981a3ac7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="#3c194ee1" />
            <solid android:color="#a6fcffff"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip"/>
            <stroke android:width="1dip" android:color="#00545454" />
            <gradient android:angle="-90" android:startColor="#58969696" android:endColor="#bc4b4b4b" />
        </shape>
    </item>

</selector>